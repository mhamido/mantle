module Parity with

fun isEven (n: Int): Bool =
    if n == 0 then true
    else isOdd (n - 1)
and isOdd (n: Int): Bool =
    if n == 0 then false
    else isEven (n - 1)

fun main (): Unit =
    let val lim: Int = 10
        fun loop (n: Int): Int = 
            if n <= lim then 
                let val () = print (intToString n)
                    val () = print " is "
                in println (if isEven n then "even" else "odd")
            else ()
    in loop 0

